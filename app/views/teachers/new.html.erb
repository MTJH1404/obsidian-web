<% provide(:title, "Neuer Lehrer") %>
<h1>Neuer Lehrer</h1>

<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<%= form_for @teacher do |f| %>
			<%= render :partial => "shared/error_messages", :locals => {:data => @teacher} %>

			<%= f.label :name %>
			<%= f.text_field :name, :class => "form-control" %>

			<%= f.submit "Lehrer erstellen", :class => "btn btn-success" %>
		<% end %>
	</div>
</div>