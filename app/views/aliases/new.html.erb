<% provide(:title, "Neuer Alias") %>
<h1>Neuer Alias</h1>

<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<%= form_tag aliases_path, :method => :post do %>
			<%= render :partial => "shared/error_messages", :locals => {:data => @alias} if @alias %>

			<%= label_tag :name, "Aliasname" %>
			<%= text_field_tag :name, "", :class => "form-control" %>

			<%= label_tag :isbn, "ISBN" %>
			<div class="input-group">
				<%= text_field_tag :isbn, @isbn || "", :class => "form-control", :id => "isbn_0", :maxlength => 13,
					:data => {:lookup => lookup_books_url} %>
				<span class="input-group-addon" id="title_0"></span>
			</div>
			
			<%= submit_tag "Alias erstellen", :class => "btn btn-success form-control" %>
		<% end %>
	</div>
</div>