<% provide(:title, "Neuer Alias") %>
<h1>Neuer Alias</h1>

<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<%= form_for @alias do |f| %>
			<%= render :partial => "shared/error_messages", :locals => {:data => @alias} %>

			<%= f.label :name %>
			<%= f.text_field :name, :class => "form-control" %>

			<%= f.fields_for :book do |book_form| %>
			<%= book_form.label :isbn, "ISBN" %>
			<div class="input-group">
				<%= book_form.text_field :isbn, :class => "form-control", :id => "isbn_0", :maxlength => 13,
					:data => {:lookup => lookup_books_url} %>
				<span class="input-group-addon" id="title_0"></span>
			</div>
			<% end %>
			
			<%= f.submit "Alias erstellen", :class => "btn btn-success form-control" %>
		<% end %>
	</div>
</div>