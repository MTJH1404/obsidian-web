<%= form_tag aliases_path, :method => :post do %>
	<%= hidden_field_tag :book_id, book_id %>
	<div class="input-group">
		<%= text_field_tag :name, "", :placeholder => "Name", :class => "form-control" %>
		<span class="input-group-btn"><%= submit_tag "Erstellen", :class => "btn btn-success" %></span>
	</div>
<% end %>