<% provide(:title, "Rückgabe buchen") %>
<h1>R&uuml;ckgabe buchen</h1>

<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<% if student?
			path = student_lendings_path(@person)
		else
			path = teacher_lendings_path(@person)
		end %>
		<%= form_tag path, :method => :delete do %>
			<h3>
				<%= @person.name %>
				<small><%= @person.display_class if student? %></small>
			</h3>
			<%= render "shared/isbns" %>
			<%= submit_tag "Zurückgeben", :class => "btn btn-primary" %>
		<% end %>
	</div>
</div>