<% provide(:title, "Einloggen") %>
<h1>Einloggen</h1>

<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<%= form_for :session, :url => login_path do |f| %>
			<%= f.label :school, "Schule" %>
			<%= f.text_field :school, :class => "form-control" %>

			<%= f.label :password, "Passwort"%>
			<%= f.password_field :password, :class => "form-control" %>

			<%= f.submit "Einloggen", :class => "btn btn-primary" %>
		<% end %>

		<p>Neu hier? <%= link_to "Anmelden", signup_path %></p>
	</div>
</div>